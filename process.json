{
  "apps": [
    {
      "name": "greenlight",
      "script": "index.js",
      "watch": true,
      "ignore_watch" : ["node_modules/*", "logs/*"],
      "instances": 1,
      "exec_mode": "fork",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      },
      "env_maintenance": {
        "NODE_ENV": "maintenance"
      }
    }
  ]
}